<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Music Choice</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Your Music Choice</h1>

  <ul class="song-list">
  <% songs.forEach(function(song) {%>
    <!-- Used savage demo to help know what to change for the songs -->
    <li>
      <span class="name"><%= song.name %></span>
      <span class="song"><%= song.song %></span>
      <span class="votes"><%= song.thumbUp %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% }) %>
  </ul>

  <h2>Add a message</h2>

  <form action="/songs" method="POST" class="song">
    <input type="text" placeholder="Your name" name="name" required>
    <input type="text" placeholder="Song name and artist" name="song" required>
    <button type="submit">Add Song</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
